# 包含所有 Python 文件
recursive-include src *.py

# 包含模板文件
recursive-include src/dp/agent/cli/templates *.template
recursive-include src/dp/agent/cli/templates *.json
recursive-include src/dp/agent/cli/templates *.sh

# 包含 UI 静态文件
recursive-include src/dp/agent/cli/templates/ui/frontend/ui-static *

# 排除前端开发文件
prune src/dp/agent/cli/templates/ui/frontend/src
prune src/dp/agent/cli/templates/ui/frontend/node_modules
exclude src/dp/agent/cli/templates/ui/frontend/package*.json
exclude src/dp/agent/cli/templates/ui/frontend/tsconfig*.json
exclude src/dp/agent/cli/templates/ui/frontend/vite.config.ts
exclude src/dp/agent/cli/templates/ui/frontend/.eslintrc.cjs
exclude src/dp/agent/cli/templates/ui/frontend/index.html

# 包含配置文件
include README.md
include LICENSE
include pyproject.toml
include setup.py